/** @type {import('next').NextConfig} */
const withPWA = require('next-pwa')({
  dest: 'public',
  disable: process.env.NODE_ENV === 'development',
  // Cloudflare-optimized PWA settings
  register: true,
  skipWaiting: true,
  buildExcludes: [/middleware-manifest\.json$/],
  // Custom caching for voice app
  runtimeCaching: [
    {
      urlPattern: /^https:\/\/api\.thethirdvoice\.ai\/.*/i,
      handler: 'NetworkFirst',
      options: {
        cacheName: 'api-cache',
        expiration: {
          maxEntries: 32,
          maxAgeSeconds: 24 * 60 * 60 // 24 hours
        }
      }
    }
  ],
});

const nextConfig = {
  output: 'export',
  trailingSlash: true,
  images: { unoptimized: true },
  
  // Cloudflare Pages optimization
  poweredByHeader: false,
  compress: true,
  
  // Build optimization
  eslint: {
    ignoreDuringBuilds: true,
  },
  
  // Webpack config optimized for Cloudflare + PWA
  webpack: (config, { dev, isServer }) => {
    // Only disable cache in Cloudflare environment
    if (process.env.CF_PAGES) {
      config.cache = false;
    }
    
    // Optimize for client-side
    if (!isServer) {
      config.resolve = config.resolve || {};
      config.resolve.fallback = {
        ...config.resolve.fallback,
        fs: false,
        net: false,
        tls: false,
      };
    }
    
    return config;
  },
  
  env: {
    NEXT_PUBLIC_API_URL: 'https://api.thethirdvoice.ai',
  },
};

module.exports = withPWA(nextConfig);